{
  "version": 2,
  "name": "vasecom",
  "alias": ["vasecom.vercel.app"],
  "regions": ["iad1", "sfo1", "gru1"],
  "builds": [
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "*.css",
      "use": "@vercel/static"
    },
    {
      "src": "*.js",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/sitemap.xml",
      "dest": "/sitemap.xml",
      "headers": {
        "Content-Type": "application/xml",
        "Cache-Control": "public, max-age=86400"
      }
    },
    {
      "src": "/robots.txt",
      "dest": "/robots.txt",
      "headers": {
        "Content-Type": "text/plain",
        "Cache-Control": "public, max-age=86400"
      }
    },
    {
      "src": "/(.*\\.(css|js|png|jpg|jpeg|gif|svg|webp|ico))",
      "dest": "/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/co/?",
      "dest": "/index.html",
      "headers": {
        "X-Country": "Colombia",
        "Content-Language": "es-CO"
      }
    },
    {
      "src": "/mx/?",
      "dest": "/index.html",
      "headers": {
        "X-Country": "Mexico",
        "Content-Language": "es-MX"
      }
    },
    {
      "src": "/ar/?",
      "dest": "/index.html",
      "headers": {
        "X-Country": "Argentina",
        "Content-Language": "es-AR"
      }
    },
    {
      "src": "/br/?",
      "dest": "/index.html",
      "headers": {
        "X-Country": "Brazil",
        "Content-Language": "pt-BR"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html",
      "headers": {
        "X-Frame-Options": "DENY",
        "X-Content-Type-Options": "nosniff",
        "X-XSS-Protection": "1; mode=block",
        "Referrer-Policy": "strict-origin-when-cross-origin",
        "Permissions-Policy": "geolocation=(), microphone=(), camera=()"
      }
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "functions": {
    "app/api/*.js": {
      "runtime": "@vercel/node@18.x"
    }
  },
  "redirects": [
    {
      "source": "/home",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/inicio",
      "destination": "/#inicio",
      "permanent": true
    }
  ],
  "trailingSlash": false,
  "cleanUrls": true
}